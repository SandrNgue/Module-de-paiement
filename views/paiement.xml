<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="action_show_paiement" model="ir.actions.act_window">
        <field name="name">PAIEMENT</field>
        <field name="res_model">paiement</field>
        <field name="view_mode">tree,form</field>
    </record>

      <menuitem
        id="show_mtnclient"
        name="MTN Money"
    />
    <menuitem
        id="show_paiement"
        name="paiement"
        parent="show_mtnclient"
        action="action_show_paiement"
        sequence="30"
    /> 
    <record id="paiement_view_form" model="ir.ui.view">
        <field name="name">paiement.view.form</field>
        <field name="model">paiement</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="token" />                       
                       </group> 
                       <group>
                            <field name="state" />                       
                       </group>  
                    </group>      
                </sheet>
            </form>
        </field>
    </record>


    <record id="paiement_view_tree" model="ir.ui.view">
        <field name="name">paiement.view.tree</field>
        <field name="model">paiement</field>
        <field name="arch" type="xml">
            <tree>
                <field name="token" />
                <field name="state" />
            </tree>
        </field>
    </record>
</odoo>
